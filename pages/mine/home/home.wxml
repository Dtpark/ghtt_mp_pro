<cu-custom bgColor="bg-white">
</cu-custom>

<!-- 个人信息 开始 -->
<view wx:if="{{ uid }}" class="cu-list menu-avatar" bindtap="">
    <view class="cu-item">
        <view class="cu-avatar round lg"
            style="background-image:url('{{ avatar }}');"></view>
        <view class="content">
            <view class="text-black text-lg">
                <text class="text-cut">{{username}}</text>
                <!-- <view class="cu-tag round bg-orange sm">断开连接...</view> -->
            </view>
            <view class="text-gray text-sm flex">
                <text class="text-cut"> uid:{{uid}}</text>
            </view>
        </view>
        <view class="action">
            <!-- <text class="cuIcon-right lg text-gray"></text> -->
        </view>
    </view>
</view>
<!-- 个人信息 结束 -->

<!-- 登录 开始 -->
<view wx:else class="cu-list menu-avatar" bindtap="toLogin">
    <view class="cu-item">
        <view class="cu-avatar round lg"
            style="background-image:url('{{ avatar }}');"></view>
        <view class="content">
            <view class="text-black text-lg">
                <text class="text-cut">注册/登录</text>
                <!-- <view class="cu-tag round bg-orange sm">断开连接...</view> -->
            </view>
            <view class="text-gray text-sm flex">
                <text class="text-cut"> 登录查看更多信息</text>
            </view>
        </view>
        <view class="action">
            <text class="cuIcon-right lg text-gray"></text>
        </view>
    </view>
</view>
<!-- 登录 结束 -->

<!-- 主题、回复、积分 开始 -->
<view class="padding flex text-center text-grey cu-bar bg-white">
    <view class="flex flex-sub flex-direction solid-right">
        <view class="text-xxl text-orange">{{threads}}</view>
        <view class="margin-top-sm">
            <text class="cuIcon-formfill"></text> 主题</view>
    </view>
    <view class="flex flex-sub flex-direction solid-right">
        <view class="text-xxl text-blue">{{posts}}</view>
        <view class="margin-top-sm">
            <text class="cuIcon-commentfill"></text> 回复</view>
    </view>
    <view class="flex flex-sub flex-direction">
        <view class="text-xxl text-green">{{credits}}</view>
        <view class="margin-top-sm">
            <text class="cuIcon-moneybagfill"></text> 积分</view>
    </view>
</view>
<!-- 主题、回复、积分 结束 -->

<!-- 列表项开始 -->
<view class="cu-list menu sm-border margin-top-sm">
    <view class="cu-item arrow" bindtap="toSetting">
        <view class="content">
            <text class="cuIcon-settings text-black"></text>
            <text class="text-black">设置</text>
        </view>
    </view>
</view>
<!-- 列表项结束 -->